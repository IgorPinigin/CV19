<Window x:Class="CV19.Views.Windows.ExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CV19.Views.Windows"
        mc:Ignorable="d"
        Title="ExportWindow" MaxWidth="{Binding ElementName=image, Path=MaxWidth}" MinWidth="{Binding ElementName=image, Path=MaxWidth}" MinHeight="680" MaxHeight="680">
    <Grid>
        <Image x:Name="image" Source="{Binding Image}" Stretch="Uniform" VerticalAlignment="Top" MaxHeight="712" MaxWidth="712"/>
        <Button Content="Сохранить" Height="20" Width="100" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,30,0,10" Command="{Binding SaveImageCommand}" />
    </Grid>
</Window>
